<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>C:/Oferta Extractor/ErrorLogging.txt</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE"/>
    </root>
</configuration>